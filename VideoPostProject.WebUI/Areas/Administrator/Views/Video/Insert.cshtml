@model Video
@{
    /**/

    ViewBag.Title = "Insert";
    Layout = "~/Areas/Administrator/Views/Shared/_Layout.cshtml";
}

<h2>Video Ekleme</h2>
<hr />
@using (Html.BeginForm("Insert", "Video", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="form-group">
        <label for="title">Başlık:</label>
        @Html.TextBoxFor(m => m.Title, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Title)
    </div>
    <div class="form-group">
        <label for="description">Açıklama:</label>
        @Html.TextBoxFor(m => m.VideoDescription, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label for="category">Kategorisi:</label>
        @Html.DropDownList("CategoryID", null, new { @class = "form-control" })
        @*@Html.ValidationMessage("CategoryID")*@
    </div>
    <div class="form-group">
        <label for="image">Video Seç:</label>
        <input type="file" name="fluVideo" />
    </div>
    <button type="submit" class="btn btn-default">Kaydet</button>
    <div>@ViewBag.Message</div>
}



@section scripts{

    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
}