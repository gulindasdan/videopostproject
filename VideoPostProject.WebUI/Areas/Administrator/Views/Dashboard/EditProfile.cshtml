@model User
@{
    ViewBag.Title = "EditProfile";
    Layout = "~/Areas/Administrator/Views/Shared/_Layout.cshtml";
}
<div class="container-fluid">
    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="header">
                    <h4 class="title">Edit Profile</h4>
                </div>
                <div class="content">
                    @using (Html.BeginForm("EditProfile", "Dashboard", FormMethod.Post))
                    {
                        @Html.HiddenFor(m => m.ID)
                        @Html.HiddenFor(m => m.CreatedDate)
                        @Html.HiddenFor(m => m.CreatedIP)
                        @Html.HiddenFor(m => m.Status)
                        @Html.HiddenFor(m => m.ModifiedDate)
                        @Html.HiddenFor(m => m.ModifiedIP)
                        @Html.HiddenFor(m => m.ChannelName)
                        @Html.HiddenFor(m => m.ImagePath)
                        @Html.HiddenFor(m => m.CoverImagePath)
                        @Html.HiddenFor(m => m.BirthDate)
                        @Html.HiddenFor(m => m.isAdministrator)
                        @Html.HiddenFor(m => m.Password)
                        <div class="row">
                            <div class="col-md-5">
                                <div class="form-group">
                                    <label>Company (disabled)</label>
                                    <input type="text" class="form-control" disabled placeholder="Company" value="Video Post">
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label>Kullanıcı Adı</label>
                                    @Html.TextBoxFor(m => m.Username, new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label for="exampleInputEmail1">Email</label>
                                    @Html.TextBoxFor(m => m.EmailAddress, new { @class = "form-control" })
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>İsim</label>
                                    @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>Soyisim</label>
                                    @Html.TextBoxFor(m => m.Surname, new { @class = "form-control" })
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label>Telefon</label>
                                    @Html.TextBoxFor(m => m.Phone, new { @class = "form-control" })
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label>Ülke</label>
                                    @Html.DropDownList("CountryID", null, new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label>Kategorisi</label>
                                    @Html.DropDownList("CategoryID", null, new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label>Cinsiyet</label>
                                    @Html.EnumDropDownListFor(x => x.Gender, null, new { @class = "form-control" })
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label>About Me</label><br />
                                    @Html.TextAreaFor(x => x.BioDescription, new { @placeholder = "Here can be your description" })
                                </div>
                            </div>
                        </div>
                        <button type="submit" class="btn btn-info btn-fill pull-right">Update Profile</button>
                        <div class="clearfix">@ViewBag.Message</div>
                    }
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card card-user">
                <div class="image">
                    <img src="" alt="..." />
                </div>
                <div class="content">
                    <div class="author">
                        <a href="#">
                            <img class="avatar border-gray" src="~/Content/uploads/@Model.ImagePath" alt="..." />
                            <h4 class="title">
                                @Model.Name @Model.Surname<br />
                                <small>@Model.EmailAddress</small><br />
                                <small>@Model.BirthDate</small>
                            </h4>
                        </a>
                    </div>
                    <p class="description text-center">
                        @Model.BioDescription
                    </p>
                </div>
                <hr>
                <div class="text-center">
                    <button href="#" class="btn btn-simple"><i class="fa fa-facebook-square"></i></button>
                    <button href="#" class="btn btn-simple"><i class="fa fa-twitter"></i></button>
                    <button href="#" class="btn btn-simple"><i class="fa fa-google-plus-square"></i></button>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts{

    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
}