@model Category
@{
    ViewBag.Title = "Insert";
    Layout = "~/Areas/Administrator/Views/Shared/_Layout.cshtml";
}

<h2>Video Kategori Ekleme</h2>

<hr />
@using (Html.BeginForm("Insert", "Category", FormMethod.Post))
{
    <div class="form-group">
        <label for="categoryName">Kategori Adı:</label>
        @Html.TextBoxFor(m => m.CategoryName, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.CategoryName)
    </div>
    <div class="form-group">
        <label for="description">Açıklaması:</label>
        @Html.TextBoxFor(m => m.CategoryDescription, new { @class = "form-control" })
    </div>

    <button type="submit" class="btn btn-default">Kaydet</button>

    <div>@ViewBag.Message</div>
}


@section scripts{

    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
}