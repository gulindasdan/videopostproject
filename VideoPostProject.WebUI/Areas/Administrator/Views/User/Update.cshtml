@model User
@{
    ViewBag.Title = "Update";
    Layout = "~/Areas/Administrator/Views/Shared/_Layout.cshtml";
}

<h2>Kullanıcı Güncelleme</h2>

<hr />

@using (Html.BeginForm("Update", "User", FormMethod.Post, new { enctype = "multipart/form-data" }))
{

    @Html.HiddenFor(m => m.ID)
    @Html.HiddenFor(m => m.CreatedDate)
    @Html.HiddenFor(m => m.CreatedIP)
    @Html.HiddenFor(m => m.Status)
    @Html.HiddenFor(m => m.ModifiedDate)
    @Html.HiddenFor(m => m.ModifiedIP)
    @Html.HiddenFor(m => m.ChannelName)
    @Html.HiddenFor(m => m.ImagePath)
    @Html.HiddenFor(m => m.CoverImagePath)
    @Html.HiddenFor(m => m.Gender)
    @Html.HiddenFor(m => m.BirthDate)
    @Html.HiddenFor(m=>m.isAdministrator)
    @Html.HiddenFor(m => m.Password)
    @Html.HiddenFor(m => m.EmailAddress)
    @Html.HiddenFor(m => m.BioDescription)

    <div class="form-group">
        <label for="name">Ad:</label>
        @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Name)
    </div>
    <div class="form-group">
        <label for="surname">Soyad:</label>
        @Html.TextBoxFor(m => m.Surname, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Surname)
    </div>
    <div class="form-group">
        <label for="username">Kullanıcı Adı:</label>
        @Html.TextBoxFor(m => m.Username, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Username)
    </div>
    <div class="form-group">
        <label for="channelName">Kanal Adı:</label>
        @Html.TextBoxFor(m => m.ChannelName, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label for="email">Email:</label>
        @Html.TextBoxFor(m => m.EmailAddress, new { @class = "form-control", @type = "email" })
        @Html.ValidationMessageFor(m => m.EmailAddress)
    </div>
    <div class="form-group">
        <label for="password">Şifre:</label>
        @Html.TextBoxFor(m => m.Password, new { @class = "form-control", @type = "password" })
        @Html.ValidationMessageFor(m => m.Password)
    </div>
    <div class="form-group">
        <label for="channelCategory">Kanal Kategorisi:</label>
        @Html.DropDownList("CategoryID", null, new { @class = "form-control" })
        @*@Html.ValidationMessage("CategoryID")*@
    </div>
    <div class="form-group">
        <label for="country">Ülke:</label>
        @Html.DropDownList("CountryID", null, new { @class = "form-control" })
        @Html.ValidationMessage("CountryID")
    </div>
    <div class="form-group">
        <label for="cinsiyet">Cinsiyet:</label>
        @Html.EnumDropDownListFor(x => x.Gender, null, new { @class = "form-control" })
        @*@Html.ValidationMessageFor(m => m.Gender)*@
    </div>
    <div class="form-group">
        <label for="birthdate">Doğum günü:</label>
        @Html.TextBoxFor(m => m.BirthDate, new { @class = "form-control", @type = "date" })
    </div>
    <div class="form-group">
        <label for="image">Profil Resmi:</label>
        <input type="file" name="fluResim" />
    </div>
    <div class="form-group">
        <label for="image">Arka Plan Resmi:</label>
        <input type="file" name="fluResim2" />
    </div>
    <div class="form-group">
        <label for="aciklama">Açıklama:</label>
        @Html.TextBoxFor(m => m.BioDescription, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label for="admin">Admin:</label>
        @Html.CheckBoxFor(m => m.isAdministrator, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-default">Güncelle</button>
        @Html.ActionLink("İptal", "Index", "User", new { @class = "btn btn-default" })
    </div>
    <div>@ViewBag.Message</div>
}

@section scripts{

    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
}