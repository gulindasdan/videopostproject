@model List<User>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Administrator/Views/Shared/_Layout.cshtml";
}

<h2>Kullanıcı Listesi</h2>
<hr />
@Html.ActionLink("Yeni Kayıt", "Insert", "User", null, new { @class = "btn btn-primary" })
<hr />
<table class="table table-hover">
    <thead>
        <tr>
            <th>Ad</th>
            <th>Soyad</th>
            <th>Kullanıcı Adı</th>
            <th>Kanal Adı</th>
            <th>E-mail</th>
            <th>Kanal Kategorisi</th>
            <th>Country</th>
            <th>Cinsiyet</th>
            <th>Birthdate</th>
            <th>Açıklama</th>
            <th>Admin Mi?</th>
            <th>Durum</th>
            <th>Oluşturulma Tarihi</th>
            <th>Güncelle</th>
            <th>Sil</th>
        </tr>
    </thead>
    <tbody>
        @foreach (User item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Surname</td>
                <td>@item.Username</td>
                <td>@item.ChannelName</td>
                <td>@item.EmailAddress</td>
                <td>
                    @(item.Category != null ? item.Category.CategoryName : "-")
                </td>
                <td>
                    @(item.Country != null ? item.Country.CountryName : "-")
                </td>
                <td>@item.Gender</td>
                <td>@item.BirthDate</td>
                <td>@item.BioDescription</td>
                <td>@item.isAdministrator</td>
                <td>
                    @if (item.Status != Status.Deleted)
                    {
                        <span style="background-color:#1daa1c; font-weight:bold; color:#ffffff; padding:7px 20px;">@item.Status</span>
                    }
                    else
                    {
                        <span style="background-color:#ff0000; color:#ffffff; font-weight:bold; padding:7px 20px;">@item.Status</span>
                    }
                </td>
                <td>@item.CreatedDate</td>
                <td>
                    @Html.ActionLink("Güncelle", "Update", "User", new { id = item.ID }, new { @class = "btn btn-success" })

                </td>
                <td>@Html.ActionLink("Sil", "Delete", "User", new { id = item.ID }, new { @class = "btn btn-danger" })</td>
            </tr>
        }
    </tbody>
</table>

