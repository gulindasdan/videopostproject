@model User

@{
    ViewBag.Title = "Videos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div style="width:1094px; margin-left:230px;">
    <section class="topProfile">
        @*<div class="main-text text-center">
                <div class="row">
                    <div class="large-12 columns">
                        <h3>World’s Biggest</h3>
                        <h1>Powerfull Video Theme</h1>
                    </div>
                </div>
            </div>*@
        <div class="profile-stats">
            <div class="row secBg">
                <div class="large-12 columns">
                    <div class="profile-author-img">
                        @if (Model.ImagePath != null)
                        {
                            <img src="~/Content/uploads/@Model.ImagePath" alt="profile author img">
                        }
                        else
                        {
                            <img src="~/Content/img/user.png" alt="profile author img">
                        }

                    </div>
                    <div class="profile-subscribe">
                        <span><i class="fa fa-users"></i>@ViewBag.TakipSayi</span>
                        @{
                            User gelen = (User)Session["oturum"];
                            if (Session["oturum"] != null && Model.ID == gelen.ID)
                            {
                                <i> </i>
                            }
                            else
                            {
                                if (ViewBag.TakipEdiyorMu == true)
                                {
                                    <button type="submit" name="subscribe" style="color:green" onclick="Subscribe('@Model.ID')">Takip Ediliyor..</button>
                                }
                                else
                                {
                                    <button type="submit" name="subscribe" style="color:red" onclick="Subscribe('@Model.ID')">Takip Et</button>
                                }
                            }
                        }
                    </div>
                    <div class="profile-share">
                        <div class="easy-share" data-easyshare data-easyshare-http data-easyshare-url="http://joinwebs.com">
                            <!-- Facebook -->
                            <button data-easyshare-button="facebook">
                                <span class="fa fa-facebook"></span>
                                <span>Share</span>
                            </button>
                            <span data-easyshare-button-count="facebook">0</span>
                            <!-- Twitter -->
                            <button data-easyshare-button="twitter" data-easyshare-tweet-text="">
                                <span class="fa fa-twitter"></span>
                                <span>Tweet</span>
                            </button>
                            <span data-easyshare-button-count="twitter">0</span>
                            <!-- Google+ -->
                            <button data-easyshare-button="google">
                                <span class="fa fa-google-plus"></span>
                                <span>+1</span>
                            </button>
                            <span data-easyshare-button-count="google">0</span>
                            @*<div data-easyshare-loader>Loading...</div>*@
                        </div>
                    </div>
                    <div class="clearfix">
                        <div class="profile-author-name float-left">
                            <h4>@Model.Name @Model.Surname</h4>
                            <p>Join Date : <span>@Model.CreatedDate</span></p>
                        </div>
                        <div class="profile-author-stats float-right">
                            <ul class="menu">
                                <li>
                                    <div class="icon float-left">
                                        <i class="fa fa-video-camera"></i>
                                    </div>
                                    <div class="li-text float-left">
                                        <p class="number-text">@Model.Videos.Where(m => m.Status != VideoPostProject.Core.Entity.Enum.Status.Deleted).Count()</p>
                                        <span>Videos</span>
                                    </div>
                                </li>
                                <li>
                                    <div class="icon float-left">
                                        <i class="fa fa-heart"></i>
                                    </div>
                                    <div class="li-text float-left">
                                        <p class="number-text">@Model.Favorites.Where(m => m.Status != VideoPostProject.Core.Entity.Enum.Status.Deleted).Count()</p>
                                        <span>Favorites</span>
                                    </div>
                                </li>
                                <li>
                                    <div class="icon float-left">
                                        <i class="fa fa-users"></i>
                                    </div>
                                    <div class="li-text float-left">
                                        <p class="number-text">@ViewBag.TakipSayi</p>
                                        <span>Followers</span>
                                    </div>
                                </li>

                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section><!-- End profile top section -->
    <div class="row">
        <!-- left sidebar -->
        <div class="large-4 columns">
            <aside class="secBg sidebar">
                <div class="row">
                    <!-- profile overview -->
                    <div class="large-12 columns">
                        <div class="widgetBox">
                            <div class="widgetTitle">
                                <h5>Profile Overview</h5>
                            </div>
                            <div class="widgetContent">
                                <ul class="profile-overview">
                                    <li class="clearfix"><a href="@Url.Action("AboutMe","Profile" ,new { id = Model.ID})"><i class="fa fa-user"></i>Hakkımda</a></li>
                                    <li class="clearfix"><a class="active" href="@Url.Action("Videos","Profile",new { id = Model.ID})"><i class="fa fa-video-camera"></i>Videolar<span class="float-right">@Model.Videos.Where(m => m.Status != VideoPostProject.Core.Entity.Enum.Status.Deleted).Count()</span></a></li>
                                    <li class="clearfix"><a href="@Url.Action("FavoriteVideos","Profile",new { id = Model.ID})"><i class="fa fa-heart"></i>Favoriler<span class="float-right">@Model.Favorites.Where(m => m.Status != VideoPostProject.Core.Entity.Enum.Status.Deleted).Count()</span></a></li>
                                    <li class="clearfix"><a href="@Url.Action("Followers","Profile",new { id = Model.ID})"><i class="fa fa-users"></i>Takipçiler<span class="float-right"></span></a></li>

                                    @{
                                        if (Session["oturum"] != null && Model.ID == gelen.ID)
                                        {
                                            <li class="clearfix"><a href="@Url.Action("Settings", "Profile", new { id = Model.ID })"><i class="fa fa-gears"></i>Profili Düzenle</a></li>
                                            <li class="clearfix"><a href="@Url.Action("Logout", "Login")"><i class="fa fa-sign-out"></i>Çıkış</a></li>
                                        }
                                        else
                                        {
                                            <li><span></span> </li>
                                        }
                                    }
                                </ul>
                                @{
                                    if (Session["oturum"] != null && Model.ID == gelen.ID)
                                    {
                                        <a href="@Url.Action("Upload", "Video")" class="button"><i class="fa fa-plus-circle"></i>Video Yükle</a>
                                    }
                                    else
                                    {
                                        <span> </span>
                                    }
                                }
                            </div>
                        </div>
                    </div><!-- End profile overview -->
                </div>
            </aside>
        </div><!-- end sidebar -->
        <!-- right side content area -->
        <div class="large-8 columns profile-inner">
            <!-- single post description -->
            <section class="profile-videos">
                <div class="row secBg">
                    <div class="large-12 columns">
                        <div class="heading">
                            <i class="fa fa-video-camera"></i>
                            <h4>Videolar</h4>
                        </div>
                        @if (Model.Videos.Count() > 0)
                        {
                            foreach (Video item in ViewBag.Videolar)
                            {

                                <div class="profile-video">
                                    <div class="media-object stack-for-small">
                                        <div class="media-object-section media-img-content">
                                            <a href="@Url.Action("WatchVideo","Video", new { id=item.ID })"><video width="170" height="150" src="~/Content/uploads/@item.VideoPath" alt=""></video></a>

                                        </div>
                                        <div class="media-object-section media-video-content">
                                            <div class="video-content">
                                                <h5><a href="#">@item.Title</a></h5>
                                                <p>@item.VideoDescription</p>
                                            </div>
                                            <div class="video-detail clearfix">
                                                <div class="video-stats">
                                                    <span><i class="fa fa-check-square-o"></i>published</span>
                                                    <span><i class="fa fa-clock-o"></i>@item.CreatedDate</span>
                                                    <span><i class="fa fa-eye"></i>@item.Displayings.Where(m => m.Status != VideoPostProject.Core.Entity.Enum.Status.Deleted).Count()</span>
                                                </div>
                                                <div class="video-btns">
                                                    @if (Session["oturum"] != null && Model.ID == gelen.ID)
                                                    {
                                                        <a class="video-btn" href="@Url.Action("Update","Video" , new { id = item.ID })"><i class="fa fa-pencil-square-o"></i>edit</a>
                                                        <a class="video-btn" href="@Url.Action("DeleteVideo","Video" , new { id = item.ID })"><i class="fa fa-trash"></i>delete</a>
                                                    }
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        }
                        else
                        {
                            <span> Video bulunmamaktadır.</span>
                        }

                        <div class="show-more-inner text-center">
                            <a href="#" class="show-more-btn">show more</a>
                        </div>
                    </div>
                </div>
            </section><!-- End single post description -->
        </div><!-- end left side content area -->
    </div>
</div>


@section scripts{
    <script type="text/javascript">
        function Subscribe(id) {
            $.ajax({
                type: 'POST',
                url: '/Profile/Follow/' + id + '',
                dataType: 'json',
                contentType: "application/json; charset=utf-8",
                success: function (data) {
                    $(".subcribe").append("Takip Ediliyor..");
                    if (data == false) {
                        alert("Giriş Yapmalısınız!!");
                    }
                }
                ,
                error: function () {
                    alert("Error while inserting data");
                }
            });
        }
    </script>

}