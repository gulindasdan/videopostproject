@model Tuple<User, List<Subsribe>, List<Subsribe>>
@{
    ViewBag.Title = "Followers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div style="width:1094px; margin-left:230px;">
    <section class="topProfile">
        @*@*<div class="main-text text-center">
                <div class="row">
                    <div class="large-12 columns">
                        <h3>World’s Biggest</h3>
                        <h1>Powerfull Video Theme</h1>
                    </div>
                </div>
            </div>*@
        <div class="profile-stats">
            <div class="row secBg">
                <div class="large-12 columns">
                    <div class="profile-author-img">
                        @if (Model.Item1.ImagePath != null)
                        {
                            <img src="~/Content/uploads/@Model.Item1.ImagePath" alt="profile author img">
                        }
                        else
                        {
                            <img src="~/Content/img/user.png" alt="profile author img">
                        }
                        }
                    </div>
                    <div class="profile-subscribe">
                        <span><i class="fa fa-users"></i>@ViewBag.TakipSayi</span>
                        @{
                            User gelen = (User)Session["oturum"];
                            if (Session["oturum"] != null && Model.Item1.ID == gelen.ID)
                            {
                                <i> </i>
                            }
                            else
                            {
                                if (ViewBag.TakipEdiyorMu == true)
                                {
                                    <button type="submit" name="subscribe" style="color:green" onclick="Subscribe('@Model.Item1.ID')">Takip Ediliyor..</button>
                                }
                                else
                                {
                                    <button type="submit" name="subscribe" style="color:red" onclick="Subscribe('@Model.Item1.ID')">Takip Et</button>
                                }
                            }
                        }
                    </div>
                    <div class="profile-share">
                        <div class="easy-share" data-easyshare data-easyshare-http data-easyshare-url="http://joinwebs.com">
                            <!-- Facebook -->
                            <button data-easyshare-button="facebook">
                                <span class="fa fa-facebook"></span>
                                <span>Share</span>
                            </button>
                            <span data-easyshare-button-count="facebook">0</span>
                            <!-- Twitter -->
                            <button data-easyshare-button="twitter" data-easyshare-tweet-text="">
                                <span class="fa fa-twitter"></span>
                                <span>Tweet</span>
                            </button>
                            <span data-easyshare-button-count="twitter">0</span>
                            <!-- Google+ -->
                            <button data-easyshare-button="google">
                                <span class="fa fa-google-plus"></span>
                                <span>+1</span>
                            </button>
                            <span data-easyshare-button-count="google">0</span>
                            @*<div data-easyshare-loader>Loading...</div>*@
                        </div>
                    </div>
                    <div class="clearfix">
                        <div class="profile-author-name float-left">
                            <h4>@Model.Item1.Name @Model.Item1.Surname</h4>
                            <p>Join Date : <span>@Model.Item1.CreatedDate</span></p>
                        </div>
                        <div class="profile-author-stats float-right">
                            <ul class="menu">
                                <li>
                                    <div class="icon float-left">
                                        <i class="fa fa-video-camera"></i>
                                    </div>
                                    <div class="li-text float-left">
                                        <p class="number-text">
                                            @Model.Item1.Videos.Where(m => m.Status != VideoPostProject.Core.Entity.Enum.Status.Deleted).Count()

                                        </p>
                                        <span>Videos</span>
                                    </div>
                                </li>
                                <li>
                                    <div class="icon float-left">
                                        <i class="fa fa-heart"></i>
                                    </div>
                                    <div class="li-text float-left">
                                        <p class="number-text">@Model.Item1.Favorites.Where(m => m.Status != VideoPostProject.Core.Entity.Enum.Status.Deleted).Count()</p>
                                        <span>favorites</span>
                                    </div>
                                </li>
                                <li>
                                    <div class="icon float-left">
                                        <i class="fa fa-users"></i>
                                    </div>
                                    <div class="li-text float-left">
                                        <p class="number-text">@ViewBag.TakipSayi</p>
                                        <span>followers</span>
                                    </div>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section><!-- End profile top section -->
    <div class="row">
        <!-- left sidebar -->
        <div class="large-4 columns">
            <aside class="secBg sidebar">
                <div class="row">
                    <!-- profile overview -->
                    <div class="large-12 columns">
                        <div class="widgetBox">
                            <div class="widgetTitle">
                                <h5>Profile Overview</h5>
                            </div>
                            <div class="widgetContent">
                                <ul class="profile-overview">
                                    <li class="clearfix"><a href="@Url.Action("AboutMe", "Profile", new { id = Model.Item1.ID })"><i class="fa fa-user"></i>Hakkımda</a></li>
                                    <li class="clearfix"><a href="@Url.Action("Videos", "Profile", new { id = Model.Item1.ID })"><i class="fa fa-video-camera"></i>Videolar<span class="float-right">@Model.Item1.Videos.Where(m => m.Status != VideoPostProject.Core.Entity.Enum.Status.Deleted).Count()</span></a></li>
                                    <li class="clearfix"><a href="@Url.Action("FavoriteVideos", "Profile", new { id = Model.Item1.ID })"><i class="fa fa-heart"></i>Favoriler<span class="float-right">@Model.Item1.Favorites.Where(m => m.Status != VideoPostProject.Core.Entity.Enum.Status.Deleted).Count()</span></a></li>
                                    <li class="clearfix"><a class="active" href="@Url.Action("Followers", "Profile", new { id = Model.Item1.ID })"><i class="fa fa-users"></i>Takipçiler<span class="float-right"></span></a></li>

                                    @{
                                        if (Session["oturum"] != null && Model.Item1.ID == gelen.ID)
                                        {
                                            <li class="clearfix"><a href="@Url.Action("Settings", "Profile", new { id = Model.Item1.ID })"><i class="fa fa-gears"></i>Profili Düzenle</a></li>
                                            <li class="clearfix"><a href="@Url.Action("Logout", "Login")"><i class="fa fa-sign-out"></i>Çıkış</a></li>
                                        }
                                        else
                                        {
                                            <li><span></span> </li>
                                        }
                                    }
                                </ul>
                                @{
                                    if (Session["oturum"] != null && Model.Item1.ID == gelen.ID)
                                    {
                                        <a href="@Url.Action("Upload", "Video")" class="button"><i class="fa fa-plus-circle"></i>Video Yükle</a>
                                    }
                                    else
                                    {
                                        <span> </span>
                                    }
                                }

                            </div>
                        </div>
                    </div><!-- End profile overview -->
                </div>
            </aside>
        </div><!-- end sidebar -->
        <!-- right side content area -->
        <div class="large-8 columns profile-inner">
            <!-- followers -->
            <section class="content content-with-sidebar followers margin-bottom-10">
                <div class="row secBg">
                    <div class="large-12 columns">
                        <div class="row column head-text clearfix">
                            <h4 class="pull-left"><i class="fa fa-users"></i>Takip Edilen</h4>
                        </div>
                        <div id="followed">
                            @*<div style="width:100px; height:100px;">
                                    <div class="follower">
                                        <div class="follower-img">
                                            <img src="http://placehold.it/115x100" alt="followers">
                                        </div>
                                        <span>Frank Wright</span>
                                        <button type="submit" name="follow">Subscribe</button>
                                    </div>
                                </div>*@
                            @if (Model.Item2.Where(m => m.FolowedID == Model.Item1.ID).Count() > 0)
                            {
                                foreach (Subsribe item in Model.Item2)
                                {
                                    <div class="large-2 small-6 medium-3 columns">
                                        <div class="follower">
                                            <div class="follower-img">
                                                <a href="@Url.Action("AboutMe","Profile", new { id = item.FolowerID })"><img src="~/Content/uploads/@item.Folower.ImagePath" alt="followers"></a>
                                            </div>
                                            <span>@item.Folower.Name @item.Folower.Surname</span>
                                            @{
                                                var sonuc = Model.Item2.Any(m => m.FolowedID == gelen.ID && m.FolowerID == item.FolowerID);
                                                if (sonuc)
                                                {
                                                    <button type="submit" name="subscribe" style="color:green" onclick="Subscribe('@item.FolowerID')">Takip Ediliyor..</button>
                                                }
                                                else
                                                {
                                                    <button type="submit" name="subscribe" style="color:red" onclick="Subscribe('@item.FolowerID')">Takip Et</button>
                                                }
                                            }
                                        </div>
                                    </div>
                                }
                            }
                            else
                            {
                                <span>Takip edilen kimse yok... :(</span>
                            }



                        </div>
                    </div>
                    <div class="show-more-inner text-center">
                        <a href="#" class="show-more-btn">show more</a>
                    </div>
                </div>
            </section>
        </div><!-- end left side content area -->

        <div class="large-8 columns profile-inner">
            <!-- followers -->
            <section class="content content-with-sidebar followers margin-bottom-10">
                <div class="row secBg">
                    <div class="large-12 columns">
                        <div class="row column head-text clearfix">
                            <h4 class="pull-left"><i class="fa fa-users"></i>Takipçiler</h4>
                        </div>
                        <div id="follower">
                            @*<div style="width:100px; height:100px;">
                                    <div class="follower">
                                        <div class="follower-img">
                                            <img src="http://placehold.it/115x100" alt="followers">
                                        </div>
                                        <span>Frank Wright</span>
                                        <button type="submit" name="follow">Subscribe</button>
                                    </div>
                                </div>*@
                            @if (Model.Item3.Where(m => m.FolowerID == Model.Item1.ID).Count() > 0)
                            {
                                foreach (Subsribe item in Model.Item3)
                                {
                                    <div class="large-2 small-6 medium-3 columns">
                                        <div class="follower">
                                            <div class="follower-img">
                                                <a href="@Url.Action("AboutMe","Profile", new { id = item.FolowedID })"><img src="~/Content/uploads/@item.Folowed.ImagePath" alt="followers"></a>
                                            </div>
                                            <span>@item.Folowed.Name @item.Folowed.Surname</span>
                                            @{
                                                var sonuc = Model.Item3.Any(m => m.FolowerID == gelen.ID && m.FolowedID == item.FolowedID);
                                                if (sonuc)
                                                {
                                                    <button type="submit" name="subscribe" style="color:green" onclick="Subscribe('@item.FolowedID')">Takip Ediliyor..</button>
                                                }
                                                else
                                                {
                                                    <button type="submit" name="subscribe" style="color:red" onclick="Subscribe('@item.FolowedID')">Takip Et</button>
                                                }
                                            }
                                        </div>
                                    </div>
                                }
                            }
                            else
                            {
                                <span>Takip eden kimse yok... :(</span>
                            }



                        </div>
                    </div>
                    <div class="show-more-inner text-center">
                        <a href="#" class="show-more-btn">show more</a>
                    </div>
                </div>
            </section>
        </div><!-- end left side content area -->
    </div>
</div>


@section scripts{
    <script type="text/javascript">
        function Subscribe(id) {
            $.ajax({
                type: 'POST',
                url: '/Profile/Follow/' + id + '',
                dataType: 'json',
                contentType: "application/json; charset=utf-8",
                success: function (data) {
                    $("#followed").append(data);
                    $("#follower").append(data);
                    if (data == false) {
                        alert("Giriş Yapmalısınız!!");
                    }
                }
            });
        }
    </script>

}