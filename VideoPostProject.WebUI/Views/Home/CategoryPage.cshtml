    <div id="category">
        <div class="row">
            <div class="col-md-2">
                <ul class="category-menu">

                    <li class="active"><a href="@Url.Action("CategoryPage", "Home")">Anasayfa</a></li>
                    <li><a href="@Url.Action("CategoryPageVideos", "Home",new { id = ViewBag.KategoriID })">Videolar</a></li>
